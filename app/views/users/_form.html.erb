<div class="login-page" >
  <div class="form">
    <%= form_for(user) do |f| %>
      <% if user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
          <% user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    <div class="login-control">
      <div class="field" style="color: white">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div class="field" style="color: white">
        <%= f.label :nickname %>
        <%= f.text_field :nickname %>
      </div>

      <div class="field" style="color: white">
        <%= f.label :mail %>
        <%= f.text_field :mail %>
      </div>

      <div class="field" style="color: white">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

    </div>
    <div class="form-control1">
      <%= submit_tag("Ingresar", :style => "background: #bdd684;") %>
    </div>
  <% end %>
  <% if @error.present? %>
    <div class="error-message"><strong>Atenci√≥n: </strong><%= @error %></div>
  <% end %>
  </div>
</div>
